<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
        <Button
            android:id="@+id/rotationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FDBE9C"
            android:drawableLeft="@drawable/tkicon"
            android:drawableRight="@drawable/tkicon"
            android:text="@string/strRBtn"
            android:textColor="#353535" />
    <ImageView
        android:id="@+id/rotationImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/tkchar"/>
</LinearLayout>